<% title %-Search results for "#{params[:query]}"- %>

<% unless @category_results.empty? %>
  <div class="row">
    <div class="span9">
      <h2>Category Results</h2>
    </div>
  </div>
  <div class="row">
    <% @category_results.each do |category| %>
      <div class="span3">
        <div class="well">
          <h3 class="catalog">
            <%# print category name %>
            <%= link_to category.name, category_equipment_models_path(category) %>
          </h3>
        </div>
      </div>
    <% end %>

  </div>

<% end %>

<% unless @equipment_model_results.empty? %>
  <% unless @category_results.empty? %>

  <div class="row">
    <div class="span9">
      <h2>Equipment Model Results</h2>
    </div>
  </div>
  <% end %>
  <ul class="thumbnails">
    <% @equipment_model_results.each do |equipment_model| %>
      <li class="span3">
        <%= render :partial => 'equipment_model_div', :locals => { :equipment_model => equipment_model, availability_hash: @availability_hash, available_string: @available_string } %>
      </li>
    <% end %>
  </ul>
<% end %>

<% unless @equipment_item_results.empty? %>
  <div class="row">
    <div class="span9">
      <h2>Equipment Item Results</h2>
    </div>
  </div>

  <div class="row">
    <% @equipment_item_results.each do |equipment_item| %>

    <div class="span4">
      <div class="well">
        <p>
          <strong>Model:</strong>
          <%= link_to equipment_item.equipment_model.name, equipment_model_path(equipment_item.equipment_model) %>
        </p>
        <p>
          <strong>Item:</strong>
          <%= equipment_item.name %> (<%= equipment_item.serial %>)
        </p>
        <p>
          <strong>Status:</strong>
          <% if equipment_item.available? %>
            <span class="label label-success eo-table">Available</span>
          <% else %>
            <span class="label label-danger eo-table">Not Available</span>
          <% end %>
        </p>
      </div>
    </div>

    <% end %>
  </div>

<% end %>
